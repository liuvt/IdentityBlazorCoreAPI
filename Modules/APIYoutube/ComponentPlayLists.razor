@inherits ComponentPlayListsBase

@if(playLists == null)
{
    <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
}
else
{
    <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-3">
        <MudItem xs="12" Class="d-flex justify-center">
            <MudText Color="Color.Primary" Typo="Typo.h3">Videos của chúng tôi</MudText>
        </MudItem>
        <MudItem xs="12" Class="mt-5">
            <MudGrid>
                @foreach (var item in playLists)
                {
                    <MudItem xs="12" sm="6" md="4">
                        <MudPaper Height="100%" Class="durk7HoverLink">
                            <MudLink Href="@($"/list-videos/watch/{item.PlayListId}")" Underline="Underline.None">
                                    <MudItem>
                                        <img src="@item.PlayListThumbnail" />
                                    </MudItem>
                                    <MudItem Class="pa-3">
                                        <MudText Color="Color.Primary">@item.PlayListTitle</MudText>
                                        <MudText Typo="Typo.caption" Color="Color.Success">Đăng ngày: @(item.PlayListPublishedAt.Value.Date.ToShortDateString())</MudText>
                                    </MudItem>
                            </MudLink>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
        </MudItem>
    </MudContainer>
}

