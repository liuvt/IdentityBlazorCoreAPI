@inherits TemplatingDialogBase

<MudDialog>
    <TitleContent>
        <MudItem Class="d-flex">
            <MudIcon Color="@ColorButton" Icon="@IconTittle" Class="mr-2 mt-1" />
            <MudText Color="@ColorButton" Typo="Typo.h6">@TitleText</MudText>
        </MudItem>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@ColorButton" Variant="Variant.Filled" ButtonType="ButtonType.Submit" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>
