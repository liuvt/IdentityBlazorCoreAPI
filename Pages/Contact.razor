@page "/contact"
@inherits ContactBase

<PageTitle>Liên hệ - AugCenter</PageTitle>
<MudContainer MaxWidth="MaxWidth.Large" Class="mt-5">
    <MudGrid Class="augImg">
        <MudItem sm="12" md="6">
                <MudItem>
                    <MudText Typo="Typo.h3" Color="Color.Primary">Liên lạc</MudText>
                    <MudText Class="mt-3">Đã thuyết phục chưa? Hãy hỏi chi tiết, đừng lưu bất kỳ câu hỏi nào!
                    </MudText>
                </MudItem>
                <MudText Class="mt-5" Typo="Typo.h5">
                    <strong>Thông tin liên lạc</strong>
                </MudText>
                <MudItem Class="pa-2 mt-2 ml-8">
                    <!-- Email -->
                    <MudItem>
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-solid fa-envelope mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Email</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        mrdurk6@gmail.com
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                    <!-- Telegram -->
                    <MudItem Class="mt-2">
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-brands fa-telegram mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Telegram</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        @@mrdurk6
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                    <!-- Phone -->
                    <MudItem Class="mt-2">
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-solid fa-phone mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Số điện thoại</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        (+84) 924 489 810
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                     <!-- Location -->
                    <MudItem Class="mt-2">
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-solid fa-location-dot mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Địa chỉ</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        Kiên giang & Cần thơ
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                </MudItem>
            </MudItem>
            <!-- Image ảnh-->
            <MudItem sm="12" md="6">
                <img width="100%" height="100%" src="imgs/photos/contact1.png" />
            </MudItem>
    </MudGrid>

    <!-- EditForm send email-->
    <EditForm Model="@model" OnValidSubmit="OnValidSubmit" Enhance>
    <DataAnnotationsValidator />
        <MudGrid Class="pa-3 d-flex justify-center">
                        <MudItem sm="12" md="7">
                            <MudPaper Elevation="1" Class="pa-3">
                                <MudCardContent>
                                    <MudGrid>
                                        <MudItem xs="12">
                                            <MudTextField @bind-Value="model.From" For="@(() => model.From)" Disabled="@_processing"
                                                Counter="30" MaxLength="30" Immediate="true" Required="true" 
                                                Label="Email của bạn" HelperText="Hỗ trợ Email: Gmail, Yahoo, Hotmail, Outlook,.." />
                                        </MudItem>

                                        <MudItem xs="12">  
                                                <MudTextField @bind-Value="model.YourPhone" For="@(() => model.YourPhone)" Disabled="@_processing"
                                                    Counter="15" MaxLength="15" Immediate="true" Required="true" 
                                                    Label="Số điện thoại" HelperText="Hỗ trợ SĐT: Việt Nam, Malaysia, China. Đầu số: 84, 60, 86, 0)" />
                                        </MudItem>

                                        <MudItem xs="12">  
                                            <MudTextField @bind-Value="model.Subject" For="@(() => model.Subject)" Disabled="@_processing"
                                                Counter="15" MaxLength="15" Immediate="true" Required="true" 
                                                Label="Tiêu đề" HelperText="Nhập tiêu đề email" />
                                        </MudItem>

                                        <MudItem xs="12">
                                            <MudTextField @bind-Value="model.Body" For="@(() => model.Body)" Disabled="@_processing"
                                                Lines="10" Immediate="true" Required="true"  
                                                Label="Nội dung" HelperText="Nội dung email của bạn" />
                                        </MudItem>
                                    </MudGrid>
                                </MudCardContent>
                                <MudCardActions Class="d-flex justify-space-between pa-2">
                                    <MudIconButton OnClick="@(() => CleanForm())" Color="Color.Error" Disabled="@_processing"
                                        Icon="@Icons.Material.Filled.Autorenew" />
                                        
                                    <MudButton StartIcon="@Icons.Material.Filled.Login" ButtonType="ButtonType.Submit" Disabled="@_processing"
                                        Variant="Variant.Filled" Color="Color.Primary" Class="buttonOrMudTabs ml-auto text-end">
                                            <MudText>Gửi</MudText>
                                    </MudButton>
                                </MudCardActions>
                            </MudPaper>
                        </MudItem>
        </MudGrid>
    </EditForm>
</MudContainer>
