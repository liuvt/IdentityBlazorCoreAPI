@page "/contact"
@inherits ContactBase

<PageTitle>Liên hệ - AugCenter</PageTitle>
<MudMainContent Class="augBackground">
    <MudContainer MaxWidth="MaxWidth.Large" Class="augImg mt-5">
        <MudGrid>
            <MudItem sm="12" md="6">
                <MudItem>
                    <MudText Typo="Typo.h3" Color="Color.Primary">Liên lạc</MudText>
                    <MudText Class="mt-3">Đã thuyết phục chưa? Hãy hỏi chi tiết, đừng lưu bất kỳ câu hỏi nào!
                    </MudText>
                </MudItem>
                <MudText Class="mt-5" Typo="Typo.h5">
                    <strong>Thông tin liên lạc</strong>
                </MudText>
                <MudItem Class="pa-2 mt-2 ml-8">
                    <!-- Email -->
                    <MudItem>
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-solid fa-envelope mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Email</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        mrdurk6@gmail.com
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                    <!-- Telegram -->
                    <MudItem Class="mt-2">
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-brands fa-telegram mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Telegram</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        @@mrdurk6
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                    <!-- Phone -->
                    <MudItem Class="mt-2">
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-solid fa-phone mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Số điện thoại</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        (+84) 924 489 810
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                     <!-- Location -->
                    <MudItem Class="mt-2">
                        <MudItem Class="d-inline-flex">
                            <MudIcon Color="Color.Primary" Class="fa-solid fa-location-dot mt-2 mr-5" />
                            <MudItem>
                                <MudText>
                                    <strong>Địa chỉ</strong>
                                </MudText>
                                <MudItem>
                                    <MudText>
                                        Kiên giang & Cần thơ
                                    </MudText>
                                </MudItem>
                            </MudItem>
                        </MudItem>
                    </MudItem>
                </MudItem>
            </MudItem>
            <!-- Image ảnh-->
            <MudItem sm="12" md="6">
                <img width="100%" height="100%" src="imgs/photos/contact1.png" />
            </MudItem>
        </MudGrid>
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit" Enhance>
        <DataAnnotationsValidator />
        <MudGrid Class="pa-3">
            <MudItem sm="12" md="7">
                <MudCardContent>
                    <MudPaper Elevation="1" Class="pa-3">
                        <MudGrid>
                            <MudItem xs="12">
                                <MudTextField @bind-Value="model.From" For="@(() => model.From)"
                                    Counter="30" MaxLength="30" Immediate="true" Required="true" 
                                    Label="Email của bạn" HelperText="Hỗ trợ Email: Gmail, Yahoo, Hotmail, Outlook,.." />
                            </MudItem>

                            <MudItem xs="12">  
                                    <MudTextField @bind-Value="model.YourPhone" For="@(() => model.YourPhone)"
                                        Counter="15" MaxLength="15" Immediate="true" 
                                        Label="Số điện thoại" HelperText="Hỗ trợ SĐT: Việt Nam, Malaysia, China. Đầu số: 84, 60, 86, 0)" />
                            </MudItem>

                            <MudItem xs="12">  
                                <MudTextField @bind-Value="model.Subject" For="@(() => model.Subject)"
                                    Counter="15" MaxLength="15" Immediate="true" 
                                    Label="Subject" HelperText="Nhập tiêu đề email" />
                            </MudItem>

                            <MudItem xs="12">
                                <MudTextField @bind-Value="model.Body" For="@(() => model.Body)"
                                    Lines="10" Immediate="true" 
                                    Label="Body" HelperText="Giới thiệu ngắn về bản thân" />
                            </MudItem>
                        </MudGrid>
                    </MudPaper>
                </MudCardContent>
                 <MudCardActions Class="d-flex justify-space-between pa-2">
                    <MudIconButton OnClick="@(() => CleanForm())" Color="Color.Error"
                        Icon="@Icons.Material.Filled.Autorenew" />
                        
                    <MudButton StartIcon="@Icons.Material.Filled.Login" ButtonType="ButtonType.Submit"
                        Variant="Variant.Filled" Color="Color.Primary" Class="buttonOrMudTabs ml-auto text-end">
                            <MudText>Submit</MudText>
                    </MudButton>
                </MudCardActions>
            </MudItem>
        </MudGrid>
    </EditForm>
    </MudContainer>
</MudMainContent>
